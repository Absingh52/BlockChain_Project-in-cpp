{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Blockchain Project",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall",
                "-Wextra",
                "-g3",
                "d:\\blockchain\\blockchain_project\\Blockchain.cpp",
                "-o",
